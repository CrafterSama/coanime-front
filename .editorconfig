root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.{css,scss,sass}]
indent_size = 2
indent_style = space
  
[*.{js,jsx}]
indent_size = 2
indent_style = space
  
[*.{html,htm}]
indent_size = 2
